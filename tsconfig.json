{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowJs": true,
    "outDir": "build/@types/src",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "test-utils": ["./__test__"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["build", "node_modules"],
  "include": ["src/*"]
}
